<div class="flex flex-1 flex-row mx-1 overflow-hidden">
    
    <div class="flex flex-column flex-auto overflow-hidden">   
        <GameInfo Game="@Controls.CurrentGame"/>
        <div class="overflow-auto">
            @foreach(var stat in Controls.CurrentGame.PlayerStates){
                <PlayerStats Player="@stat" CurrentPlayerId="@Controls.CurrentGame.CurrentPlayerId"/>
            }
        </div>
    </div>
    <div class=" h-full flex-shrink-0">
        @if (Controls.DisplayType == DisplayType.Normal)
        {
            <ScoreButtonBoard/>
        }
    </div>
</div>

@code{
    [CascadingParameter]
    public required GameControls Controls { get; set; }
}
