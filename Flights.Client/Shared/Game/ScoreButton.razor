<div class="rounded bg-gray-500 cursor-pointer mud-elevation-5" @onclick="OnClick">
    <div class="w-[80px] h-[80px]">
        <div class="text-center text-2xl text-white pt-6">
            @Number
        </div>
    </div>
</div>

@code{
    [Parameter]
    public int Number {get;set;}

    [Parameter]
    public EventCallback<int> ReportScore {get;set;}

    private async Task OnClick(){
        await ReportScore.InvokeAsync(Number);
    }  
}