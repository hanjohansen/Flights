@using Flights.Domain.State

<div class="rounded-lg mb-2 shadow-lg mud-elevation-3">
    <div class="@GetBorderClasses()">
        <div class="grid grid-cols-3 ml-2 text-gray-600 py-2 ">
            <div class="grid grid-cols-5">
                <div class="col-span-3">
                    <MudStack Spacing="0">
                        <div class="text-3xl">
                            @Player.PlayerName
                        </div>
                        <div class="text-6xl font-bold">
                            @Player.Points
                        </div>
                    </MudStack>
                </div>
                <div class="">
                    <MudStack Spacing="0">
                        <div class="flex flex-row ">
                            <div class="">
                                <MudIcon Icon="@Icons.Material.Filled.CrisisAlert" Size="Size.Small" Color="Color.Default"/>
                            </div>
                            <div class="ml-1">
                                @Player.PointAvg
                            </div>
                        </div>
                    </MudStack>
                </div>
            </div>
            <div class="col-span-2">
                <DartStats Darts="@Player.Darts"/>
            </div>
        </div>
        
    </div>                
</div>

@code{
    [Parameter]
    public PlayerState Player {get;set;} = null!;

    [Parameter]
    public Guid? CurrentPlayerId {get;set;}

    private string GetBorderClasses(){
        var baseClasses = "rounded-lg border-l-8 ";

        return Player.PlayerId == CurrentPlayerId
            ? baseClasses + "border-green-500"
            : baseClasses + "border-gray-300";
    }
}